<div class="new">
  <%= form_for(@itemnew,url:admins_items_path) do |f| %>
    <div>
      <h1>並びはテーブルタグを使用して後で直します！</h1>
      <h3>商品 新規登録画面</h3>
      <div class="col-xs-4">
        <%= f.label :image, "商品画像！"%>
        <%= f.attachment_field :image %>
      </div>
      
      <div class="col-xs-4">
      <table>
        <tr>
          <th><%= f.label :name, "商品名" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        
        <tr>
          <th><%= f.label :explanation, "商品説明" %></th>
          <td><%= f.text_area :explanation %></td>
        </tr>
        
        <tr>
          <th><%= f.label :type_id, "ジャンル１" %></th>
          <td><%= f.select :type_id, Type.all.collect {|t| [t.name, t.id]}, {}, {class: "form-control"} %></td>
        </tr>


        <%= f.label :status, "販売ステータス" %>
         <%= f.select :status,[[:販売中], [:売切れ]], { include_blank: true, selected: 1}, {class: "form-control"} %>
        <br>

        <tr>
          <th><%= f.label :excluded, "商品金額" %></th>
          <td><%= f.text_field :excluded %></td>
        </tr>

      </table>

      </div>

      <div class="col-xs-4">
      </div>
    </div>

    <div class="row">
      <div class="col-xs-4 col-md-offset-8">
        <%= f.submit %>
      </div>
    </div>
  <% end %>
</div>