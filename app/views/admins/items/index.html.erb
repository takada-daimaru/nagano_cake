<h1 class="color">商品一覧画面</h1>

<table class="table">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td><%= item.id %></td>
			<td>
				<%= link_to admins_item_path(item), class: 'link-color' do %>
					<%= item.name %>
				<% end %>
			</td>
			<td><%= (item.excluded).to_i.floor(0).to_s(:delimited,delimiter: ',') %></td>
			<td><%= item.type.name %></td>
			<td><%= item.status %></td>
		</tr>
		<% end %>
	</tbody>
</table>
  
