
<h2 class="color">商品 編集画面</h2>

   <%= form_for @item, url: admins_item_path do |f|%>
      <div class="row">

       <%# #商品画像 %>
       <div class="col-xs-4">
          <%= attachment_image_tag @item, :image, format:'jpg',size:'250x250' %>
          <%= f.attachment_field :image %>
       </div>


       <div class="col-xs-8">
        <div class="row">
           <h3 class="col-xs-2">商品名</h3>
           <br>
          <span class="col-xs-10">
            <%= f.text_field :name %>
          </span>
        </div>
      </div>

        <div class="row">
         <h3 class="col-xs-2">商品説明</h3>
           <br>
          <span class="col-xs-10">
            <%= f.text_area :explanation %>
         </span>
        </div>


        <div class="row">
         <h3 class="col-xs-2">ジャンル</h3>
           <br>
          <span class="col-xs-10">
             <%= f.select :type_id, Type.all.collect {|t| [t.name, t.id]}, {}, {class: "form-control"} %>
           </span>
        </div>

       <div class="row">
         <h3 class="col-xs-4">税抜き価格</h3>
           <br>
         <span class="col-xs-8">
           <%= f.text_field :excluded %>
         </span>
        </div>

       <div class="row">
          <h3 class="col-xs-4">販売ステータス</h3>
            <br>
           <span class="col-xs-8">
            <%= f.select :status, Item.statuses.keys.to_a,{} %>
          </span>

       </div>

       <span class="pull-right">
        <%= f.submit "変更を保存", class: "btn btn-primary" %>
      </span>
     </div>
<% end %>



