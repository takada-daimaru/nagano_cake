<h2>商品 編集画面</h2>

   <%= form_for @item do |f|%>
      <div class="row">

       <%# #商品画像 %>
       <div class="col-xs-4">
          <%= attachment_image_tag @item, :image, format:'jpg',size:'250x250' %>
          <%= f.attachment_field :image %>
       </div>

       <div class="col-xs-8">
        <div class="row">
           <h3 class="col-xs-2">商品名</h3>
           <br>
          <span class="col-xs-10">
            <%= f.text_field :name %>
          </span>
        </div>

        <div class="row">
         <h3 class="col-xs-2">商品説明</h3>
           <br>
          <span class="col-xs-10">
            <%= f.text_area :explanation %>
         </span>
        </div>


        <div class="row">
         <h3 class="col-xs-2">ジャンル</h3>
           <br>
          <span class="col-xs-10">
             <%= f.select :status,[["ケーキ", 0], ["クッキー", 1], ["チョコレート", 2],["プリン.ゼリー", 3],["和菓子", 4],["アイス", 5]], { include_blank: true, selected: 1 }, {class: "form-control"} %>
           </span>
        </div>

       <div class="row">
         <h3 class="col-xs-4">税抜き価格</h3>
           <br>
         <span class="col-xs-8">
           <%= f.text_field :excluded %>
         </span>
        </div>

       <div class="row">
          <h3 class="col-xs-4">販売ステータス</h3>
            <br>
           <span class="col-xs-8">
            <%= f.select :status,[["販売中", 0], ["売切れ", 1]], { include_blank: true, selected: 1 }, {class: "form-control"} %>
          </span>
       </div>

       <span class="pull-right">
        <%= f.submit "変更を保存", class: "btn btn-primary" %>
      </span>
     </div>
<% end %>



