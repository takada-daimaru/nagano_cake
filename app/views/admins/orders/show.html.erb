<h2>注文詳細画面</h2>


		<div class="row">
			<h3 class="col-xs-2">購入者</h3>
			<span class="col-xs-10">
				<%= link_to admins_customer_path(@order.customer) do %>
					<%= @order.customer.first_name %><%= @order.customer.last_name %>
				<% end %>
			</span>
		</div>

		<div class="row">
			<h3 class="col-xs-2">配送先</h3>
			<span class="col-xs-10">
				〒<%= @order.postcode %><%= @order.address %><br>
				<%= @order.destination %>
			</span>
		</div>

		<div class="row">
			<h3 class="col-xs-2">支払方法</h3>
			<span class="col-xs-10">
				<%= @order.payment %>
			</span>
		</div>

		<div class="row">
			<h3 class="col-xs-2">注文ステータス</h3>
			<span class="col-xs-10">
				<%= form_for(@order) do |f| %>
					<%= f.select :status, [["入金確認", "入金確認"], ["製作中", "製作中"], ["発送準備中", "発送準備中"], ["発送済み", "発送済み"]], include_blank: "選択して下さい" %>
					<%= f.submit "更新", class: "btn btn-primary" %>
				<% end %>
			</span>
		</div>


		<table class="table">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価 (税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th>製作ステータス</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @order.order_items.each do |order_item| %>
					<tr>
						<td><% order_item.item.name %></td>
						<td><% order_item.item.excluded %></td>
						<td><% order_item.quontity %></td>
						<td><% order_item.item.excluded * order_item.quontity %></td>
						
			<%= form_for(order , url:admins_order_item_path(order.id)) do |f| %>
						<td><%= f.select :status, [["着手不可", "着手不可"], ["製作待ち", "製作待ち"], ["試作中", "試作中"], ["製作完了", "製作完了"]], include_blank: "選択して下さい" %>
						</td>
						<td><%= f.submit "更新", class: "btn btn-primary" %></td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>

