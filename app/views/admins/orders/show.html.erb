<h2>注文詳細画面</h2>


		<div class="row flex">
			<h3 class="col-xs-3">購入者</h3>
			<span class="col-xs-9">
				<%= link_to admins_customer_path(@order.customer) do %>
					<%= @order.customer.first_name %><%= @order.customer.last_name %>
				<% end %>
			</span>
		</div>

		<div class="row flex">
			<h3 class="col-xs-3">配送先</h3>
			<span class="col-xs-9">
				〒<%= @order.postcode.insert(3, "-") %><%= @order.address %><br>
				<%= @order.destination %>
			</span>
		</div>

		<div class="row flex">
			<h3 class="col-xs-3">支払方法</h3>
			<span class="col-xs-9">
				<%= @order.payment %>
			</span>
		</div>

		<div class="row flex">
			<h3 class="col-xs-3">注文ステータス</h3>
			<span class="col-xs-9">
				<%= form_for @order, url: admins_order_path(@order.id) do |f| %>
					<%= f.select :status, [["入金確認", "入金確認"], ["製作中", "製作中"], ["発送準備中", "発送準備中"], ["発送済み", "発送済み"]], include_blank: "選択して下さい" %>
					<%= f.submit "更新", class: "btn btn-primary" %>
				<% end %>
			</span>
		</div>
		<div class="row price">
			<div class="col-xs-9">
				<table class="table">
					<thead>
						<tr>
							<th>商品名</th>
							<th>単価 (税込)</th>
							<th>数量</th>
							<th>小計</th>
							<th>製作ステータス</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% total = 0 %>
						<% @order.order_items.each do |order_item| %>
							<tr>

								<td><%= order_item.item.name %></td>
								<td><%= (order_item.price * 1.1).to_i.floor(0).to_s(:delimited, delimiter:',') %></td>
								<td><%= order_item.quontity %></td>
								<td><%= (order_item.price * order_item.quontity).to_i.floor(0).to_s(:delimited, delimiter:',') %></td>

					<%= form_for(order_item , url:admins_order_item_path(order_item.id)) do |f| %>
								<td><%= f.select :status, [["着手不可", "着手不可"], ["製作待ち", "製作待ち"], ["試作中", "試作中"], ["製作完了", "製作完了"]], include_blank: "選択して下さい" %>
								</td>
								<td><%= f.submit "更新", class: "btn btn-primary" %></td>
								<% end %>
							</tr>
					</tbody>
				</table>
			</div>
			<div class="col-xs-3">
				<div>
					<span><strong>商品合計</strong></span>
					<span>
						<% order_item.price * order_item.quontity %>
						<% total = order_item.price * order_item.quontity + total %>
						<%= (total).to_i.floor(0).to_s(:delimited, delimiter: ',') %>
						
			
					</span>
				</div>
				<div>
					<span><strong>送料</strong></span>
					<span><%= @order.shipping_cost %></span>
				</div>
				<div class="order">
					<span><strong>請求額合計</strong></span>
					<span><strong><%= number_to_currency(@order.shipping_cost + total, :locale => 'jp') %></strong></span>
				</div>
				<% end %>
			</div>
		</div>