<h1>注文一覧画面</h1>

<table class="table col-xs-offset-2 col-xs-8">
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at strftime("%Y/%m/%d") %></td>
			<td><span><%= order.customer.first_name %><%= order.customer.last_name %></span></td>
			<td><%= order.order_item.quontity %></td>
			<td><%= order.status %></td>
		</tr>
		<% end %>
	</tbody>
</table>