<h1>会員一覧画面</h1>

<table>
	<thead>
		<tr>
			<th>会員ID</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @customers.each do |customer| %>
		<tr>
			<td><%= customer.id %></td>
			<td><span><%= customer.first_name %><%= customer.last_name %></span></td>
			<td><%= customer.email %></td>
			<td><%= customer.status %></td>
		</tr>
		<% end %>
	</tbody>
</table>