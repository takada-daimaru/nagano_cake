<h2>会員編集画面</h2>

<%= form_for @customer, url: admins_customer_path do |f| %>

	<div class="row">
		<div class="col-xs-2 col-xs-offset-1">
			<strong>会員ID</strong>
		</div>
      	<strong><%= @customer.id %></strong>
  	</div>

  	<div class="row">
	 	<div class="col-xs-2 col-xs-offset-1">
	 	   <strong>氏名</strong>
	  	</div>
	  	<div class="col-xs-9">
	   		<%= f.text_field :first_name, autofocus: true %>
	   		<%= f.text_field :last_name, autofocus: true %>
	  	</div>
  	</div>

  	<div class="row">
      	<div class="col-xs-2 col-xs-offset-1">
        	<strong>フリガナ</strong>
     	</div>
     	<div class="col-xs-9">
       		<%= f.text_field :first_name_kana, autofocus: true %>
     	   	<%= f.text_field :last_name_kana, autofocus: true %>
     	</div>
 	 </div>

  	<div class="row">
      	<div class="col-xs-2 col-xs-offset-1">
        	<%= f.label :postcode, "郵便番号" %>
      	</div>
     	 <div class="col-xs-9">
      	  <%= f.text_field :postcode, autofocus: true %>
      	</div>
 	 </div>

	  <div class="row">
	      <div class="col-xs-2 col-xs-offset-1">
	        <%= f.label :address, "住所" %>
	      </div>
	      <div class="col-xs-9">
	        <%= f.text_field :address, autofocus: true, class: "col-xs-5" %>
	      </div>
	  </div>

	<div class="row">
	    <div class="col-xs-2 col-xs-offset-1">
		    <%= f.label :phone_number, "電話番号" %>
	     </div>
	    <div class="col-xs-9">
	       <%= f.text_field :phone_number, autofocus: true %>
	    </div>
	</div>

	<div class="row">
	    <div class="col-xs-2 col-xs-offset-1">
	      <%= f.label :email, "メールアドレス" %>
	    </div>
	    <div class="col-xs-9">
	      <%= f.email_field :email, autofocus: true %>
	    </div>
  	</div>

  	<div class="row">
  		<div class="col-xs-2 col-xs-offset-1">
  			<%= f.label :status, "会員ステータス" %>
  		</div>
  		<div class="col-xs-9">
	  		<div class="radio-inline">
		      <%= f.radio_button :status, :有効, checked: true %>
		      <%= f.label :status, "有効" %>
		    </div>

		    <div class="radio-inline">
		      <%= f.radio_button :status, :退会済み %>
		      <%= f.label :status, "退会済み" %>
		    </div>
  		</div>
  	</div>

  <div class="row">
    <div class="actions col-xs-4 col-xs-offset-4">
       <%= f.submit "変更を保存する", class: "btn btn-success" %>
    </div>
  </div>
<% end %>