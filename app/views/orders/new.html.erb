<div class="row">
  <h2>注文情報入力</h2>
  
  <section>
    <h4>支払い方法</h4>
    <%= form_for @ordernew, url: orders_confirm_path do |f| %>
      <div class="radio-inline">
        <%= f.radio_button :payment, :transfer %>
        <%= f.label :transfer, "銀行振込" %>
      </div>

      <div class="radio-inline">
        <%= f.radio_button :payment, :credit %>
        <%= f.label :credit, "クレジットカード" %>
      </div>
    <% end %>

    <%# <ul>
      <li>クレジットカード</li>
      <li>銀行振込</li>
    </ul> %>
  </section>

  <section>
    <h4>お届け先</h4>
    

    <ul>
      <li> 
        <p>ご自身の住所</p>
        <ul>
          <li>住所</li>
          <li>名前</li>
        </ul>
      </li>

      <li>
        <p>登録済住所から選択</p>
        <ul>
          <li>住所をプルダウン式で選択できるようにする</li>
        </ul>
      </li>
      <li>
        <p>新しいお届け先</p>
      </li>
    
      <%= form_for(@shippingnew) do |f| %>

        <div class="fiels row">
          <div class="col-xs-2">
            <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :postcode %>
          </div>
        </div>
        
        <div class="fiels row">
          <div class="col-xs-2">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :address, :size => "60" %>
          </div>
        </div>
        
        <div class="fiels row">
          <div class="col-xs-2">
            <%= f.label :name, "宛名" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :name %>
          </div>
        </div>

        <div class="actions row text-center">
          <br>
          <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
        </div>
      <% end %>
    </ul>
  </section>

</div>