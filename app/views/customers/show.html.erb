<div class="row show">
  <h3>マイページ</h3>
  <table>
    <tr>
      <td>登録情報</td>
      <td><%= link_to "編集する", customer_edit_path, class: "btn btn-primary" %></td>
      <%= link_to "パスワードを変更する", customer_passwords_edit_path,class: "btn btn-primary" %>
     
    </tr>
  </table>

  <div class="alt-table-responsive">
    <table class="table table-bordered">
      <tr>
        <th>氏名</th>
        <td><%= @customer.first_name %> <%= @customer.last_name %></td>
      </tr>

      <tr>
        <th>カナ</th>
        <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
      </tr>
      
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
      </tr>
      
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>

    <table>
      <tr>
        <th width="100px">配送先</th>
        <td><%= link_to "一覧を見る", shippings_path , class: "btn btn-primary" %></td>
      </tr>
      <tr>
        <th>注文履歴</th>
        <td><%= link_to "一覧を見る", orders_path , class: "btn btn-primary" %></td>
      </tr>
    </table>
</div>