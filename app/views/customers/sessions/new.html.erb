<h2>会員の方はこちらからログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="field">
        <%= f.label :メールアドレス, class: "col-md-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-9" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="field">
        <%= f.label :パスワード, class: "col-md-3" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-md-9" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3" style="text-align: right;">
      <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %>
    </div>
  </div>

  <div class="row">
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary col-md-2 col-md-offset-5" %>
    </div>
  </div>
<% end %>

<h2>登録がお済みでない方</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h4><%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。</h4>
  </div>
</div>


