<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="field">
      <div class="col-md-2">
        <%= f.label :名前 %>
      </div>
      <div class="col-md-3">
        <em>(姓)</em>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
      <div class="col-md-7">
        <em>(名)</em>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <div class="col-md-2">
        <%= f.label :フリガナ %>
      </div>
      <div class="col-md-3">
        <em>(セイ)</em>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
      <div class="col-md-7">
        <em>(メイ)</em>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <div class="col-md-2">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-md-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <div class="col-md-2">
        <%= f.label :郵便番号 %>
        <em>(ハイフンなし)</em>
      </div>
      <div class="col-md-10">
        <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <div class="col-md-2">
        <%= f.label :住所 %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <div class="col-md-2">
        <%= f.label :電話番号 %>
        <em>(ハイフンなし)</em>
      </div>
      <div class="col-md-10">
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <div class="col-md-2">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>
      <div class="col-md-10">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <div class="col-md-2">
        <%= f.label :パスワード %>
        <em>(確認用)</em>
      </div>
      <div class="col-md-10">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="actions">
       <%= f.submit "新規登録", class: "btn btn-success col-md-2 col-md-offset-5" %>
    </div>
  </div>
<% end %>

<h2>既に会員登録済みの方</h2>

<%= render "customers/shared/links" %>


