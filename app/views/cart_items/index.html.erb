<div class="row">
<h3>ショッピングカート</h3>
<%= link_to "カートを空にする",customers_cart_items_path %>

<table>
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @cartitems.each do |cartitem| %>
		<tr>
			<td>
				<%= cartitem.item.name %>
			</td>
			<td>
				<%= cartitem.item.excluded %>
			</td>
			<td>
				<%= cartitem.quontity %>
			</td>
			<td></td>
			<td>
				<%= link_to "削除する", customers_cart_items_path(cartitem), method: :delete %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%=link_to "買い物を続ける", root_path %>

